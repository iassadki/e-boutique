<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Exotic Cars
			{% endblock %}
		</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css">
		<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

		<link href="{{ asset('./assets/styles/app.css') }}" rel="stylesheet">
		{# <link rel="stylesheet" href="https://unpkg.com/simple-icons@4.28.0/dist/simple-icons.css"> #}
		{# <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css"> #}{% block stylesheets %}
			{# <link rel="stylesheet" href="{{ asset('styles/style.css') }}"> #}
		{% endblock %}

		{% block importmap %}
			{{ importmap('app') }}
		{% endblock %}
	</head>
	<body>
		{% block body %}
			<div class="background-image">
				<nav class="navbar navbar-expand-lg navbar-dark bg-transparent">
					<div class="container-fluid">
						<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
							<span class="navbar-toggler-icon"></span>
						</button>
						<a class="navbar-brand text-white font-weight-bold" href="{{ path('home') }}">Exotic Rentals</a>

						<div class="collapse navbar-collapse" id="navbarTogglerDemo03">
							<ul class="navbar-nav mx-auto mb-2 mb-lg-0">
								<li class="nav-item">
									<a class="nav-link text-white font-weight-bold" href="{{ path('app_product_index') }}">Véhicules</a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-white font-weight-bold" href="{{ path('app_category_index') }}">Catégories</a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-white font-weight-bold" href="{{ path('app_cart_line_index') }}">Panier</a>
								</li>

								{% if app.user %}
									<li class="nav-item">
										<a href="{{ path('app_logout') }}" class="nav-link text-white font-weight-bold">Déconnexion</a>
									</li>
								{% else %}
									<li class="nav-item">
										<a class="nav-link text-white font-weight-bold" href="{{ path('app_login') }}">Connexion</a>
									</li>
									<li class="nav-item">
										<a class="nav-link text-white font-weight-bold" href="{{ path('app_register') }}">Créer un compte</a>
									</li>
								{% endif %}
							</ul>
						</div>
					</div>
				</nav>
			</div>
			<br>
		{% endblock %}
	</body>
</html>

